# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{php,xml,yml,neon,json,yaml}]
charset = utf-8
indent_style = tab
indent_size = 4

[*.{yml,yaml}]
charset = utf-8
indent_style = spaces
indent_size = 2
